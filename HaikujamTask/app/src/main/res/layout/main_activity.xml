<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@drawable/gradient_image">
    <com.haikujamtaskanimation.MorphingButton
        android:id="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />
    <RelativeLayout
        android:id="@+id/ll_linearlayout"
        android:layout_width="match_parent"
        android:translationZ="@dimen/_300sdp"
        android:layout_height="300dp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_one"
            style="@style/CircularView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/profile_img" />

        <ImageView
            android:id="@+id/img_two"
            style="@style/CircularView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/profile_img" />

        <ImageView
            android:id="@+id/img_three"
            style="@style/CircularView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="30dp"
            app:srcCompat="@drawable/profile_img" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_one_inner"
                style="@style/ButtonStyle"
                android:layout_width="100dp"
                android:background="@color/black_overlay" />

            <ImageView
                android:id="@+id/img_two_inner"
                style="@style/ButtonStyle"
                android:layout_width="120dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/black_overlay" />

            <ImageView
                android:id="@+id/img_three_inner"
                style="@style/ButtonStyle"
                android:layout_width="80dp"
                android:background="@color/black_overlay" />
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/button_next"
        style="@style/ButtonStyle"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:background="@color/colorWhite"
        android:text="@string/dummy_button"
        android:textColor="@color/colorPrimary"
        android:visibility="gone" />

</RelativeLayout>
